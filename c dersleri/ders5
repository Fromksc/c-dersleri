#include <stdio.h>

int main() {
    // for döngüsü
    for (int i = 1; i <= 10; i++) {
        printf("For Döngüsü: %d\n", i);
    }

    // while döngüsü
    int j = 1;
    while (j <= 10) {
        printf("While Döngüsü: %d\n", j);
        j++;
    }

    // do-while döngüsü
    int k = 1;
    do {
        printf("Do-While Döngüsü: %d\n", k);
        k++;
    } while (k <= 10);

    return 0;
}
